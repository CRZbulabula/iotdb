<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>bundle</id>
    <!-- 压缩包的ID -->
    <formats>
        <format>zip</format>
        <!-- 生成的压缩包格式 -->
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}</directory>
            <!-- 指定包含文件的目录 -->
            <includes>
                <include>*-jar-with-dependencies.jar</include>
                <!-- 指定包含的文件 -->
            </includes>
            <outputDirectory>/</outputDirectory>
            <!-- 指定输出目录，这里是压缩包的根目录 -->
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${project.basedir}/src/main/resources/config.txt</source>
            <outputDirectory>/conf</outputDirectory>
        </file>
        <file>
            <source>${project.basedir}/src/main/resources/run.sh</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>${project.basedir}/src/main/resources/logback.xml</source>
            <outputDirectory>/</outputDirectory>
        </file>
    </files>
</assembly>
